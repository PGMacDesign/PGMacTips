<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Sticky Scroll View attributes -->
    <declare-styleable name="StickyScrollView">
        <attr name="stuckShadowHeight" format="dimension" />
        <attr name="stuckShadowDrawable" format="reference" />
    </declare-styleable>

    <!-- Code pulled from Balysv's project (all credit to them!) here - https://github.com/balysv/material-ripple -->
    <declare-styleable name="PGMaterialRippleLayout">
        <attr name="pg_rippleColor" format="color" localization="suggested" />
        <attr name="pg_rippleDimension" format="dimension" localization="suggested" />
        <attr name="pg_rippleOverlay" format="boolean" localization="suggested" />
        <attr name="pg_rippleAlpha" format="float" localization="suggested" />
        <attr name="pg_rippleDuration" format="integer" localization="suggested" />
        <attr name="pg_rippleFadeDuration" format="integer" localization="suggested" />
        <attr name="pg_rippleHover" format="boolean" localization="suggested" />
        <attr name="pg_rippleBackground" format="color" localization="suggested" />
        <attr name="pg_rippleDelayClick" format="boolean" localization="suggested" />
        <attr name="pg_ripplePersistent" format="boolean" localization="suggested" />
        <attr name="pg_rippleInAdapter" format="boolean" localization="suggested" />
        <attr name="pg_rippleRoundedCorners" format="dimension" localization="suggested" />
    </declare-styleable>


    <declare-styleable name="PGCircleImageView">
        <attr name="strokeColor" format="color"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="highlightEnable" format="boolean"/>
        <attr name="highlightColor" format="color"/>
    </declare-styleable>

</resources>