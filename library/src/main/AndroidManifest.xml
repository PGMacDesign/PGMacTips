    <!-- Permissions used in this library -->

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Used to determine connectivity before making a call-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Used to Utilitze the camera-->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Used to Crop and save photos in order to use them-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- Used to read from the gallery and select photos-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Used for location based utilities like getting latitude and longitude -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!-- Used for location based utilities like getting latitude and longitude-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!-- Used in Selecting contacts from the internal SQLite DB of contacts
